<div class="container">
  <div class="flex justify-items-center">
    <div class="col-6">
      <img class="img-fluid" src="<%= comment.image%>" />
      <div class="row justify-content-between">
        <%if(comment.user == user.id){ %>
        <form
          action="/comment/deletePost/<%= comment.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= comment.brands %></p>
    </div>
    <div class="col-3 mt-5">
      <p><%= comment.types %></p>
    </div>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/post/<%=comment.post._id%>">Return to Location</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

