<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6" data-id="<%= post._id%>">
      <h2><%= post.title %></h2>
      <% if(favorites.includes(post._id)) { %>
        <button class="unfavorite_btn">Unfavorite</button>
        <%} else {%>
        <button class="favorite_btn">Favorite</button>
      <%}%>
      <img class="img-fluid" src="<%= post.image%>" />
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
        </form>
        <%if(post.user == user.id){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= post.caption %></p>
    </div>
    <div class="mt-5">
      <h2>Post an inventory update</h2>
      <form action="/comment/createComment/<%=post._id%>" method="POST">
        <div class="mb-3">
            <label for="brands" class="form-label">Available Brands</label>
            <input type="text" class="form-control" id="brands" name="brands">
        </div>
        <div class="mb-3">
          <label for="Types" class="form-label">Types</label>
          <input class="form-control" id="Types" name="Types"></input>
        </div>
        <div class="mb-3">
          <label for="imgUpload" class="form-label">Image</label>
          <input type="file" class="form-control" id="imageUpload" name="file">
        </div>
        <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
      </form>
    </div>
    <ul style="list-style-type: none;">
      <% for(let i=0; i<comments.length; i++) {%>
        <li class="col-6 justify-content-between mt-5">
          <a href="/comment/<%= comments[i]._id%>">
            <h3><%= comments[i].brands %></h3>
          </a>
          
        </li>
      <% } %>
    </ul>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>
<script src="../js/main.js"></script>
<%- include('partials/footer') -%>
